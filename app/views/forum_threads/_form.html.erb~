
<%= bootstrap_form_for(@forum_thread, :html => {:class => "form-horizontal"}) do |f| %>
  <%= f.text_area :body, cols: 20, rows: 20 %>
  <%= f.check_box :real_allowed%>
  <%= f.check_box :pseudo_allowed%>
  <%= f.check_box :anon_allowed%>
  <%= f.select :mode, @forum_thread.modes%>
  <div class="actions form-actions">
    <%= f.submit %>
  </div>
<% end %>

