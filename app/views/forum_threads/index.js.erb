$('.table tbody').append('<%= j render partial: "forum_thread_table", collection: @forum_threads %>');
<% if @forum_threads.next_page %>
  $('.pagination').replaceWith('<%= j will_paginate @forum_threads, renderer: BootstrapPagination::Rails %>');
<% else %>
  $(window).off('scroll');
  $('.pagination').remove();
<% end %>
