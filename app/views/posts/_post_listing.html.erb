<div class=" panel panel-default ">

	<div class="panel-body">
      <p><%= raw post_listing.body_markdown! %></p>
	</div>

	<div class="panel-footer">
    <div class="author">
      <%= ApplicationHelper.user_short_link(self, post_listing.user, post_listing.mode) %>
      posted <%=  our_time post_listing.updated_at%>
    </div>
    <div class="postID">
      Comment <%= post_listing.id %>
    </div>
	</div>
</div>
